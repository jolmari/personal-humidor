@model List<HumidorClient.Models.InventoryItem>

@{
    ViewData["Title"] = "Cigar Catalogue";
}

<h2><strong>Current Catalogue of Cigars</strong></h2>
<p>Here you can see your currently stored selection of cigars</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Cigar.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PurchaseDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    <a asp-controller="Cigars" asp-action="Details" asp-route-id="@item.Cigar.Id">@Html.DisplayFor(modelItem => item.Cigar.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
            </tr>
        }
    </tbody>
</table>