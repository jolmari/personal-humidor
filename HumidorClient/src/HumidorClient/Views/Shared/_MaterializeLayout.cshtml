<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>

    <environment names="Development">
        <link rel="stylesheet" href="lib/materialize/dist/css/materialize.css" type="text/css"/>
        <link rel="stylesheet" href="css/site.css" type="text/css"/>
    </environment>

    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css"
              asp-fallback-href="lib/materialize/dist/css/materialize.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"/>>
        <link rel="stylesheet" href="css/site.min.css" asp-append-version="true" />
    </environment>

    @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
</head>
<body>

<script>
    $(document).ready(function() {
        $(".dropdown-button").dropdown();
    });
</script>

<div>
    @RenderBody()

    <environment names="Development">
        <script src="lib/jquery/dist/jquery.js"></script>
        <script src="lib/materialize/dist/js/materialize.js"></script>
        <script src="js/site.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="https://code.jquery.com/jquery-2.1.1.min.js"
                asp-fallback-src="lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"
                asp-fallback-src="lib/materialize/dist/js/materialize.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
        </script>
        <script src="js/site.min.js" asp-append-version="true"></script>
    </environment>

</div>


</body>
</html>